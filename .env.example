# FlipFoundry Environment Variables
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local to version control.

# ============================================================================
# SERVER-SIDE VARIABLES (secret — not exposed to browser)
# ============================================================================

# eBay Finding API credentials
# Obtain from: https://developer.ebay.com/my/keys
EBAY_APP_ID=
EBAY_CERT_ID=
EBAY_DEV_ID=

# eBay environment: 'sandbox' or 'production'
EBAY_SANDBOX=false

# eBay site ID (0=US, 3=UK, 77=Germany, 15=Australia)
EBAY_SITE_ID=0

# Upstash Redis (distributed rate limiting + caching)
# Obtain from: https://console.upstash.com → Create Database → REST API
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# API Key for protected endpoints (generate with: openssl rand -hex 32)
# When unset, auth is skipped (development mode). Set in production.
API_KEY=

# Sentry Error Monitoring
# Obtain from: https://sentry.io → Project Settings → Client Keys (DSN)
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=

# ============================================================================
# CLIENT-SIDE VARIABLES (public — safe to expose)
# ============================================================================

# Sentry client-side DSN (same value as SENTRY_DSN — safe to expose)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
NEXT_PUBLIC_SENTRY_RELEASE=

# API key for client-side requests (same value as API_KEY)
# Exposed to browser — the real protection is rate limiting + CSP same-origin
NEXT_PUBLIC_API_KEY=
